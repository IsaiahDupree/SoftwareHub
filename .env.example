# =============================================================================
# SoftwareHub Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values.
# For local development, the Supabase values below work out of the box.
# For production (Vercel), set these in your Vercel project settings.
# =============================================================================

# Site URL (production: https://yourdomain.com)
NEXT_PUBLIC_SITE_URL=http://localhost:2828

# =============================================================================
# Supabase
# =============================================================================
# Local Development (custom ports, see supabase/config.toml)
# Run `npm run db:start` to start local Supabase, then use these values:
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54821
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6ImFub24iLCJleHAiOjE5ODM4MTI5OTZ9.CRXP1A7WOeoJeXxjNni43kdQwgnWNReilDMblYTn_I0
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6InNlcnZpY2Vfcm9sZSIsImV4cCI6MTk4MzgxMjk5Nn0.EGIM96RAZx35lJzdJsyH-qQwv8Hdp7fsn3W0YpN81IU

# Production Supabase (replace with your actual values)
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# Stripe (Payments)
# =============================================================================
# Get keys from https://dashboard.stripe.com/apikeys
# Production: use live mode keys (sk_live_*, pk_live_*)
# Development: use test mode keys (sk_test_*, pk_test_*)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# Meta (Facebook) Tracking
# =============================================================================
NEXT_PUBLIC_META_PIXEL_ID=
META_CAPI_ACCESS_TOKEN=
META_API_VERSION=v20.0

# =============================================================================
# Resend (Email)
# =============================================================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=
RESEND_FROM="SoftwareHub <hello@updates.yourdomain.com>"
RESEND_WEBHOOK_SECRET=
RESEND_AUDIENCE_ID=

# =============================================================================
# Cron Jobs
# =============================================================================
# Used to authenticate Vercel cron job requests
CRON_SECRET=your-cron-secret-here

# =============================================================================
# Mux (Video Hosting)
# =============================================================================
# Get credentials from https://dashboard.mux.com/settings/access-tokens
MUX_TOKEN_ID=
MUX_TOKEN_SECRET=
MUX_WEBHOOK_SECRET=
# For signed playback URLs - get from https://dashboard.mux.com/settings/signing-keys
MUX_SIGNING_KEY_ID=
MUX_SIGNING_PRIVATE_KEY=

# =============================================================================
# Cloudflare R2 / S3 File Storage
# =============================================================================
# For Cloudflare R2:
#   S3_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
#   S3_REGION=auto
# For AWS S3:
#   Leave S3_ENDPOINT empty
#   S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=softwarehub-files
S3_ENDPOINT=
S3_REGION=auto
# Public R2 domain for download URLs (e.g., https://files.yourdomain.com)
S3_PUBLIC_URL=

# =============================================================================
# License System
# =============================================================================
# Secret key used to sign license activation JWT tokens
# Generate with: openssl rand -hex 32
LICENSE_JWT_SECRET=your-license-jwt-secret-here

# =============================================================================
# Port Configuration (local development only)
# =============================================================================
PORT=2828
APP_PORT=2828
